<body>
<h1>Mario Kart Random Track Picker</h1>
<button onclick="pickRandomTrack()">Pick Random Track</button>
<div id="trackName"></div>

<script>
const tracks = [
  "Acorn Heights",
  "Airship Fortress",
  "Boo Cinema",
  "Bowser's Castle",
  "Cheep Cheep Falls",
  "Choco Mountain",
  "Crown City",
  "Dandelion Depths",
  "Desert Hills",
  "Dino Dino Jungle",
  "DK Pass",
  "DK Spaceport",
  "Dry Bones Burnout",
  "Faraway Oasis",
  "Great ? Block Ruins",
  "Koopa Troopa Beach",
  "Mario Bros. Circuit",
  "Mario Circuit",
  "Moo Moo Meadows",
  "Peach Beach",
  "Peach Stadium",
  "Rainbow Road",
  "Salty Salty Speedway",
  "Shy Guy Bazaar",
  "Sky-High Sundae",
  "Starview Peak",
  "Toad's Factory",
  "Wario Stadium",
  "Wario Shipyard",
  "Whistlestop Summit"
];

// Map each track to a background image (URLs can be replaced with actual images you want)
const trackImages = {
  "Rainbow Road": "https://i.imgur.com/lI4E3Tr.jpg",
  "Bowser's Castle": "https://i.imgur.com/0l1yn8W.jpg",
  "Moo Moo Meadows": "https://i.imgur.com/YvXCh8S.jpg"
  // Add more mappings here...
};

function pickRandomTrack() {
  const trackNameEl = document.getElementById("trackName");
  
  // Fade out
  trackNameEl.style.opacity = 0;

  setTimeout(() => {
    const randomTrack = tracks[Math.floor(Math.random() * tracks.length)];
    trackNameEl.textContent = randomTrack;

    // Change background if available
    if (trackImages[randomTrack]) {
      document.body.style.backgroundImage = `url(${trackImages[randomTrack]})`;
    } else {
      document.body.style.backgroundImage = "";
    }

    // Fade in
    trackNameEl.style.opacity = 1;
  }, 500);
}
</script>
</body>
